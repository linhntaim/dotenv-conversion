{
    "name": "node-js-package-starter",
    "version": "1.0.0",
    "description": "To develop a Node.js package from the scratch",
    "main": "dist/index.js",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "babel ./src -d ./dist -D --delete-dir-on-start",
        "test": "nyc mocha ./tests --require @babel/register",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "ready": "npm i && npm run build && npm test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/linhntaim/node-js-package-starter.git"
    },
    "keywords": [
        "package",
        "starter"
    ],
    "author": "Nguyen Tuan Linh <contact@linhntaim.com> (https://www.linhntaim.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/linhntaim/node-js-package-starter/issues"
    },
    "homepage": "https://github.com/linhntaim/node-js-package-starter#readme",
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.22.20",
        "@babel/register": "^7.22.15",
        "babel-plugin-add-module-exports": "^1.0.4",
        "chai": "^4.3.10",
        "coveralls": "^3.1.1",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0"
    }
}
